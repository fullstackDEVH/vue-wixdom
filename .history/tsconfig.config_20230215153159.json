{
  "extends": "@vue/tsconfig/tsconfig.node.json",
  "include": [
    "vite.config.*",
    "vitest.config.*",
    "cypress.config.*",
    "playwright.config.*",
    "src"
  ],
  "compilerOptions": {
    "composite": true,
    "types": ["node"],
    "baseUrl": "src/",
    "importsNotUsedAsValues": "remove",
    "isolatedModules": false
  }
}
